generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// User model for NextAuth
model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("STAFF") // ADMIN, STAFF
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  bills         Bill[]
  billsCreated  Bill[]    @relation("CreatedBy")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}
 
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}

model Item {
  id            String     @id @default(cuid())
  name          String
  category      String
  purchasePrice Float
  sellingPrice  Float
  unit          String // meter, piece
  stock         Float      @default(0)
  minStock      Float      @default(5)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  billItems     BillItem[]
  stockLogs     StockLog[]
}

model StockLog {
  id        String   @id @default(cuid())
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id])
  change    Float // + for add, - for sold
  type      String // PURCHASE, SALE, ADJUSTMENT
  note      String?
  createdAt DateTime @default(now())
}

model Bill {
  id             Int       @id @default(autoincrement())
  billNumber     Int
  customerName   String?
  customerPhone  String?
  total          Float
  discount       Float     @default(0)
  tax            Float     @default(0)
  netTotal       Float
  paymentMode    String    @default("CASH") // CASH, UPI, CARD
  createdAt      DateTime  @default(now())
  createdById    String?
  createdBy      User?     @relation("CreatedBy", fields: [createdById], references: [id])
  items          BillItem[]
}


model BillItem {
  id     String @id @default(cuid())
  billId  Int
  bill   Bill   @relation(fields: [billId], references: [id])
  itemId String
  item   Item   @relation(fields: [itemId], references: [id])
  name   String // Snapshot of name at time of sale
  qty    Float
  price  Float // Price at time of sale
  total  Float
}

model Settings {
  id          String @id @default("1")
  shopName    String
  address     String?
  phone       String?
  gst         String?
  logoUrl     String?
}
